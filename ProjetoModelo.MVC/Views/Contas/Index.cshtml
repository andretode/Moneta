@model IEnumerable<Moneta.Application.ViewModels.ContaViewModel>

@{
    ViewBag.Title = "Contas";
}

<h2>@ViewBag.Title</h2>

<p>
    <a class="btn btn-primary" href="~/Contas/Create" title="Adicionar Conta">
        <i class="glyphicon glyphicon-plus"></i>
    </a>
</p>

<table class="table">
    <tr style="background-color: #e6e6e6">
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCadastro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th>&nbsp;</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                <a title="Editar"
                   href="@Url.Action("Edit", "Contas", new { id = item.ContaId })">
                    <i class="icon-white glyphicon glyphicon-edit"></i>
                </a>
                <a title="Remover" onclick="return confirm('Tem certeza que deseja remover?')"
                   href="@Url.Action("Delete", "Contas", new { id = item.ContaId })">
                    <i class="icon-white glyphicon glyphicon-trash"></i>
                </a>
            </td>
        </tr>
    }
</table>
