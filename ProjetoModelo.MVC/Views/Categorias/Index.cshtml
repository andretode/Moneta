@model IEnumerable<Moneta.Application.ViewModels.CategoriaViewModel>

@{
    ViewBag.Title = "Categorias";
}

<h2>@ViewBag.Title</h2>

<p>
    <a class="btn btn-primary" href="~/Categorias/Create" title="Adicionar Categoria">
        <i class="glyphicon glyphicon-plus"></i>
    </a>
</p>

<table class="table">
    <tr style="background-color: #e6e6e6">
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrcamentoMensal)
        </th>
        <th>
            
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <button class='btn' style='background-color:@item.Cor'></button>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrcamentoMensal)
            </td>
            <td>
                <a title="Editar"
                   href="@Url.Action("Edit", "Categorias", new { id = item.CategoriaId })">
                    <i class="icon-white glyphicon glyphicon-edit"></i>
                </a>
                <a title="Remover" onclick="return confirm('Tem certeza que deseja remover?')"
                   href="@Url.Action("Delete", "Categorias", new { id = item.CategoriaId })">
                    <i class="icon-white glyphicon glyphicon-trash"></i>
                </a>
            </td>
        </tr>
    }
</table>
