@model Moneta.Application.ViewModels.CategoriaViewModel

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Categoria</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CategoriaId)

        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Cor, new { htmlAttributes = new { @class = "form-control", @type = "color" } })
                @Html.ValidationMessageFor(model => model.Cor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OrcamentoMensal, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <div class="inner-addon">
                    <i class="glyphicon glyphicon-usd left-addon"></i>
                    <i class="right-addon glyphicon glyphicon-info-sign" data-toggle="tooltip" title="Defina este valor para gerar o gráfico Orçado x Realizado"></i>
                    @Html.EditorFor(model => model.OrcamentoMensal, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                @Html.ValidationMessageFor(model => model.OrcamentoMensal, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.DataCadastro, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span style="vertical-align: -33%">@Html.DisplayFor(model => model.DataCadastro, new { htmlAttributes = new { @class = "form-control" } })</span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <span class="btn btn-default" onclick="javascript: window.history.back();">Cancelar</span>
            </div>
        </div>
    </div>
}

<link rel="stylesheet" href="~/Content/campos-com-icone.css">

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
