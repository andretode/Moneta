@model IEnumerable<Moneta.Application.ViewModels.ExtratoBancarioViewModel>

@{
    ViewBag.Title = "Extrato Bancário";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Importar Arquivo OFX", "ImportarOfx", null, new { @class="btn btn-default" })
</p>

@using (Html.BeginForm("Index", "Contas", new {pesquisa = ""}, FormMethod.Get))
{
    <p>
        Pesquisar por Descrição: @Html.Editor("pesquisa") <input type="submit" value="Pesquisar" class="btn btn-default" />
    </p>
}

<table class="table table-striped table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DataCompensacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroDocumento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            Ações
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataCompensacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDocumento)
            </td>
            <td>
                @if (item.Valor > 0)
                {
                    <span style="color:green">
                        @Html.DisplayFor(modelItem => item.Valor)
                    </span>
                }
                else
                {
                    <span style="color:red">
                        @Html.DisplayFor(modelItem => item.Valor)
                    </span>
                }                
            </td>
            <td>
                @Html.ActionLink("Associar", "Associar", new { id = item.ExtratoBancarioId }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.ExtratoBancarioId })
            </td>
        </tr>
    }
</table>
