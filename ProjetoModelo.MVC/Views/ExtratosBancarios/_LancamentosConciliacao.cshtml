@model IEnumerable<LancamentoViewModel>
@using Moneta.Application.ViewModels
@using Newtonsoft.Json

@{
    Layout = null;
}

<table id="tableLancamentos" class="table table-striped table-condensed">
    <tbody>
        <tr>
            <th>Vencimento</th>
            <th>Descrição</th>
            <th>Valor</th>
            <th></th>
        </tr>

        @if(Model.Count() > 0)
        {
            foreach (var lancamento in Model)
            {
                <tr class="child">
                    <td>@Html.DisplayFor(l => lancamento.DataVencimento)</td>
                    <td>@Html.DisplayFor(l => lancamento.DescricaoResumida)</td>
                    @{
                        var cor = "red";
                        if (lancamento.Valor > 0)
                        {
                            cor = "green";
                        }
                    }
                    <td style='color:@cor'>@Html.DisplayFor(l => lancamento.Valor)</td>
                    <td>
                        @{
                            var lancamentoJson = JsonConvert.SerializeObject(lancamento);
                        }
                        <a href="javascript:conciliar('@lancamentoJson')" title="Conciliar este...">
                            <i class="icon-white glyphicon glyphicon-link"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr class="child">
                <td>Não há lançamentos para serem conciliados</td>
            </tr>
        }
</tbody>
</table>
