@{
    ViewBag.Title = "Importar OFX";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ImportarOfx", "Lancamentos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Conta", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownList("contaIdFiltro", (SelectList)@ViewBag.Contas, "-- Selecione a Conta --", new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.Label("Arquivo OFX", htmlAttributes: new { @class = "control-label col-md-2" })
            <input type="file" name="caminhoOfx" class="btn btn-default" />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Importar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar para Listagem", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
